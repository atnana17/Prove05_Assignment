<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scriptureprompt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScripturePrompt">
        <activity
            android:name=".ScriptureDisplay"
            android:parentActivityName=".ScripturePrompt"/>
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ScripturePrompt"/>
        <activity
            android:name=".ScripturePrompt"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>